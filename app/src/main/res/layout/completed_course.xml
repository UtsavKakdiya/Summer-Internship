        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_completed_course1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/icon_course1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToDetailsOfCourseActivity"
                android:background="#00FFFFFF"
                android:src="@drawable/img_course1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1_completed_course1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="goToDetailsOfCourseActivity"
                    android:fontFamily="@font/poppins"
                    android:text="3D Blender \nand UI/UX"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2_completed_course1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins"
                    android:text="2 hrs 25 mins"
                    android:textColor="#979797"
                    android:textSize="12sp" />

            </LinearLayout>

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/progress_1"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                app:donut_circle_starting_degree="-90"
                app:donut_finished_color="@color/primary"
                app:donut_finished_stroke_width="6dp"
                app:donut_progress="100"
                app:donut_show_text="true"
                app:donut_text_color="@color/black"
                app:donut_text_size="16sp"
                app:donut_unfinished_color="#f5f5f5"
                app:donut_unfinished_stroke_width="6dp" />

        </LinearLayout>

